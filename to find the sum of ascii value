#include <stdio.h>

int main() 
{
    char str[1000];
    int i, sum = 0;
    
    printf("Enter the string : ");
    for (i = 0; str[i]=1000; i++)
    {
    scanf("%c",&str[i]);
    }
    for (i = 0; str[i] != '\0'; i++)
    {
        sum += str[i];
    }
    
    printf("Sum of all characters : %d", sum);
    
    return 0;
}
